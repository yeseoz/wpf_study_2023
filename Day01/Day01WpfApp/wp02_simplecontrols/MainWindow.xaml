<Window x:Class="wp02_simplecontrols.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp02_simplecontrols"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="250">
    <StackPanel> <!-- 스택을 쌓아서 어쩌구 --> <!-- 모든 컨트롤의 속성은 대문자! -->
        <TextBlock Text="텍스트 블럭" Width="100" />
        <Label Content="라벨컨트롤" Width="100" /> <!-- 안쪽에 여백이 더 있음 -->
        <TextBox Text="텍스트 박스" Width="100" />
        <PasswordBox Password="패스워트 박스" Width="100" />
        <Slider x:Name ="SldStep" Value="0" Width="100" ValueChanged="SldStep_ValueChanged"/>
        <ProgressBar x:Name="PgbStep" Width="100" Height="15" Maximum="100" />

        <Image Source="Resources/xml.png" Width ="32" Height="64" />
        <MediaElement Source="Resources/video.mp4" Width="180" Height="100" LoadedBehavior="Play" />
    </StackPanel>
</Window>
