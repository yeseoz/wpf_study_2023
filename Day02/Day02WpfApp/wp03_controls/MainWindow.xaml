<Window x:Class="wp03_controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wp03_controls"
        mc:Ignorable="d"
        Title="Controls!" Height="400" Width="250" >
    <StackPanel>
        <Button x:Name="BtnOk" Content="Normal" Width="80" Height="35" />
        <ToggleButton x:Name="BtnToggle" Content="오프상태" Width="80" Height="35" />
        <CheckBox x:Name="ChkFruitStrawberry" Content="딸기" IsChecked="true" Width="100" />
        <CheckBox x:Name="ChkMango" Content="망고" Width="100" />
        <CheckBox x:Name="ChkApple" Content="사과" Width="100" />
        <RadioButton x:Name="RdoMale" Content="남성" IsChecked="true" Width="100" />
        <RadioButton x:Name="RdoFemale" Content="여성" Width="100" />

        <!-- 사이에 뭔갈 넣고 싶으면 여는 테그와 닫는 테그를 따로 !-->
        <Button x:Name="BtnMidia" Width="160" Height="60" Padding="10">
            <StackPanel Orientation="Horizontal">
                <!--<MediaElement Source="video.mp4" LoadedBehavior="Play"/>--> <!-- 버튼에 동영상 넣기~ -->
                <Image Source="xml.png" Width="32" />
                <Label Content="XAM 클릭" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Ellipse Width="50" Height="50" Fill="Blue" StrokeThickness="5" Stroke="red" RenderTransformOrigin="0.5,0.5"/>
        <Rectangle Width="50" Height="50" Fill="Black" Stroke="blue" StrokeThickness="5"/>
        <Path Width="50" Height="30" Fill="red">
            <Path.Data>
                <!--<RectangleGeometry Rect="0, 0, 30, 30" />-->
                <EllipseGeometry Center="15, 15" RadiusX="15" RadiusY="15"/>
            </Path.Data>
        </Path>

    </StackPanel>
</Window>
